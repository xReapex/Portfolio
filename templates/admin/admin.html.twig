{% extends 'base.html.twig' %}

{% block title %}Admin{% endblock %}

{% block body %}

    <div class="centre">
        <div class="container">
                <h2 class="mt-3">Admin</h2>
                <p>Ici c'est le panel des admins, vous pouvez donc supprimer un utilisateur, changer les identifiants de son compte ou encore changer ses roles ! Commencez dès maintenant à <a class="text-warning" href="#gestion">gérer les utilisateurs</a> !</p>
        </div>
    </div>
    <div class="centre" id="gestion">
        <div class="container">
            <div class="row">
                <div style="text-align: center;">
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-dismissible alert-warning mt-3" style="width: 500px; border-radius: 10px;">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            {{ message}}
                        </div>
                    {% endfor %}
                </div>
                {% for user in users%}
                    <div class="col-md-4 mb-3">
                        {% include 'admin/_user_card.html.twig' %}
                    </div>
                {% endfor %}
            </div>

            <div class="pagination pagination-sticky justify-content-center" style="margin-bottom: 2%; margin-top: 2%;">
                {{ knp_pagination_render(users) }}
            </div>
        </div>
    </div>

{% endblock %}