{% extends 'base.html.twig' %}

{% block title %}{{ project["name"] }}{% endblock %}

{% block body %}

    <div class="container">
        <div style="width: 35%; float:left;">
            <div class="centre">
                <div>
                    <h3><c class="text-warning"><i class="fab fa-gitlab"></i></c> {{ project["name"] }}</h3>
                    <p>{{ project['description'] }}</p>
                    <p>• <a class="text-warning" href="{{ project["web_url"] }}" target="_blank">Dépôt Gitlab</a> • <a class="text-warning" href="{{ project["namespace"]["web_url"] }}" target="_blank">Propriétaire</a></p>
                </div>

            </div>
        </div>

        <div style="width: 50%; float:right">
            <div class="centre" id="div_chart"></div>
        </div>
    </div>


    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
        {{ gc_draw(piechart, 'div_chart') }}
    </script>

    <a href="javascript:history.go(-1)" type="button" class="btn btn-warning btn-circle btn-lg"><i class="fas fa-list"></i></a>

{% endblock %}