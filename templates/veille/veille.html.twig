{% extends 'base.html.twig' %}

{% block title %}Veille{% endblock %}

{% block body %}

    <div class="container" style="margin-top: 3%">
        <div class="row">
            <center>
                <h1>
                    Veille technologique
                </h1>
            </center>
            {% for item in items %}
                <div class="col-md-4">
                    <div class="card" style="width: 350px; height: 500px; margin-top: 5%">
                        <img class="card-img-top" style="object-fit: fill" src="{{ item.enclosure.attributes.url | raw }}" alt="Card image cap">
                        <div class="card-body" style="align-items: center">
                            <h5 class="card-title">{{ item.title }}</h5>
                            <p class="card-text">{{ item.description | u.truncate(120) }}...</p>
                        </div>
                        <div class="card-footer">
                            <small class="text-muted">{{ item.pubDate }}</small>
                        </div>
                    </div>
                </div>

            {% endfor %}
        </div>
    </div>

{% endblock %}